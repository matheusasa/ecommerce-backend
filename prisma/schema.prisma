generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model billboard {
  id        String   @id
  storeId   String
  label     String
  imageUrl  String
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([storeId], map: "Billboard_storeId_idx")
}

model category {
  id          String   @id
  storeId     String
  billboardId String
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime

  @@index([billboardId], map: "Category_billboardId_idx")
  @@index([storeId], map: "Category_storeId_idx")
}

model color {
  id        String   @id
  storeId   String
  name      String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([storeId], map: "Color_storeId_idx")
}

model image {
  id        String   @id
  productId String
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([productId], map: "Image_productId_idx")
}

model order {
  id        String   @id
  storeId   String
  isPaid    Boolean  @default(false)
  phone     String   @default("")
  address   String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([storeId], map: "Order_storeId_idx")
}

model orderitem {
  id        String @id
  orderId   String
  productId String

  @@index([orderId], map: "OrderItem_orderId_idx")
  @@index([productId], map: "OrderItem_productId_idx")
}

model product {
  id         String   @id
  storeId    String
  categoryId String
  name       String
  price      Decimal
  isFeatured Boolean  @default(false)
  isArchived Boolean  @default(false)
  sizeId     String
  colorId    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime

  @@index([categoryId], map: "Product_categoryId_idx")
  @@index([colorId], map: "Product_colorId_idx")
  @@index([sizeId], map: "Product_sizeId_idx")
  @@index([storeId], map: "Product_storeId_idx")
}

model size {
  id        String   @id
  storeId   String
  name      String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([storeId], map: "Size_storeId_idx")
}

model store {
  id        String   @id
  name      String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime
}
